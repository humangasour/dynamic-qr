{
  "name": "dynamic-qr",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:i18n": "node scripts/lint-i18n.mjs",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "format": "prettier . --check",
    "format:write": "prettier --write .",
    "pre-commit": "husky run .husky/pre-commit",
    "pre-push": "husky run .husky/pre-push",
    "commit-msg": "husky run .husky/commit-msg",
    "prepare-commit-msg": "husky run .husky/prepare-commit-msg",
    "check-all": "npm run format && npm run lint && npm run typecheck && npm run build",
    "seed": "tsx scripts/seed.ts",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write",
      "npm run lint:i18n"
    ],
    "*.{json,md,css,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
