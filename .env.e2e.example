# E2E Testing Environment Variables - EXAMPLE FILE
# Copy this file to .env.e2e and configure with your values

# Supabase Configuration for E2E Tests
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# E2E Test Configuration
E2E_TEST_ENV=local
E2E_DATABASE_URL=your_database_url_here
E2E_BASE_URL=http://localhost:3001

# Safety Flags - Prevent destructive tests on production
E2E_AUTH_ENABLED=false
E2E_ALLOW_DESTRUCTIVE_TESTS=false
E2E_TEST_DATABASE_PREFIX=e2e_test_
E2E_MAX_TEST_DATA_AGE_HOURS=24

# Test Data Cleanup
E2E_AUTO_CLEANUP=true
E2E_CLEANUP_ON_FAILURE=true

# Browser Configuration
E2E_HEADLESS=true
E2E_SLOW_MO=0

# Timeout Configuration
E2E_TIMEOUT=30000
E2E_NAVIGATION_TIMEOUT=10000
